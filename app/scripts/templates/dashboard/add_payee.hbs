<div class="editable-box">
  <div class="editable-heading">
    <span class="title">Add or edit payee</span>
  </div>
  <div class="editable-body">
    <form name="payee" role="form" class="clearfix">
      <input type="hidden" value="{{model.id}}" />
      <div class="form-left pull-left">
        <div class="img {{model.image}}"></div>
      </div>
      <div class="form-right pull-right">
        <div class="form-row" data-errors-for="name">
          <label for="name" class="control-label">Full name</label>
          <input type="text" class="textbox" id="name" name="name" value="{{model.name}}">
        </div>
        <div class="form-row" data-errors-for="iban">
          <label for="iban" class="control-label">IBAN</label>
          <input type="text" class="textbox" id="iban" name="iban" value="{{model.iban}}"></textarea>
        </div>
        <div class="form-row" data-errors-for="bank">
          <label for="bank" class="control-label">Bank</label>
          <input type="text" class="textbox" id="bank" name="bank" value="{{model.bank}}"></textarea>
        </div>
        <div class="global_error"><div class="msg"></div></div>
        <div class="editable-buttons">
          <button type="button" class="btn btn-none action_cancel" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-default action_done">Done</button>
        </div>
      </div>
    </form>
  </div>

</div>
