<div class="row box">
  <div class="col-xs-12 col-sm-6 col-left">
    <div class="img"></div>
    <div class="text">
      <h4>Latest transaction</h4>
      <h3>{{model.userName}}</h3>
      <p class="bank"><span class="lbl">BANK</span><span class="txt">{{model.bank}}</span></p>
      <p class="iban"><span class="lbl">IBAN</span><span class="txt">{{model.iban}}</span></p>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 col-right">
    <p class="date">Updated: <strong>{{model.date}}</strong></p>
    <p class="amount">{{currency model.amount}}</small></p>
  </div>
</div>
