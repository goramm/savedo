<div class="pay-form">
  <form name="payee" role="form" class="clearfix">
    <input type="hidden" name="userId" class="userId"/>
    <div class="form-row form-row-1">
        <label for="bank" class="control-label">Pay to:</label>
        <div class="name">{{model.name}}</div>
      </div>
      <div class="form-row form-row-2" data-errors-for="amount">
        <div class="form-group">
          <label for="bank" class="control-label">Amount:</label>
          <div class="input-group">
            <div class="input-group-addon">&euro;</div>
            <input type="text" class="textbox" id="amount" name="amount" value="{{model.amount}}">
          </div>
        </div>
        </div>
      <div class="form-row form-row-3" data-errors-for="date">
        <label for="date" class="control-label">Date:</label>
        <input type="text" class="textbox" id="date" name="date"></textarea>
      </div>

      <div class="buttons">
        <button type="button" class="btn btn-none action_cancel" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-default action_pay">Pay now</button>
      </div>

      <div class="global_error"><div class="msg"></div></div>
    </div>
  </form>
</div>
